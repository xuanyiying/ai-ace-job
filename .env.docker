# Docker Environment Configuration
# Copy this file to .env and adjust values for your environment

# Node Environment
NODE_ENV=production

# Database Configuration
POSTGRES_DB=interview_ai
POSTGRES_USER=resume_user
POSTGRES_PASSWORD=resume_password
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379
REDIS_PASSWORD=

# Backend Configuration
BACKEND_PORT=3000
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Object Storage Configuration (S3)
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=interview-ai-files

# Object Storage Configuration (Aliyun OSS) - Alternative to S3
# STORAGE_PROVIDER=oss
# ALIYUN_ACCESS_KEY_ID=your-access-key
# ALIYUN_ACCESS_KEY_SECRET=your-secret-key
# ALIYUN_OSS_REGION=oss-cn-hangzhou
# ALIYUN_OSS_BUCKET=interview-ai-files

# Rate Limiting
RATE_LIMIT_FREE_TIER=10
RATE_LIMIT_WINDOW=3600

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,docx,txt

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost

# Frontend Configuration
FRONTEND_PORT=80
VITE_API_BASE_URL=http://localhost/api/v1
VITE_API_TIMEOUT=30000
VITE_APP_NAME=IntervAI
VITE_APP_VERSION=1.0.0
